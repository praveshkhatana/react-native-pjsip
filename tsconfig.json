{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": [
      "mocha"
    ],
    "esModuleInterop": true,
    "declaration": true,
  },
  "include": [
    "test",
    "src"
  ],
  "exclude": [
    "node_module",
    "docs"
  ]
}